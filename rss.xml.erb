<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title><%= @name %></title>
    <link><%= @url %></link>
    <language><%= @language || "en" %></language>
    <% @strips.each do |strip| %>
    <item>
      <title><%= strip.title %></title>
      <link><%= strip.link %></link>
      <guid><%= strip.link %></guid>
      <description><a href="<%= strip.link %>"><img src="<%= strip.img_url %>" /></a></description>
    </item>
   <% end %>
  </channel>
</rss>
